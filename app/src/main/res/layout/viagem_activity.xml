<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/titulo_viagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Detalhes da Viagem"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:id="@+id/capa_viagem"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/guaruja"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">
        </LinearLayout>

        <TextView
            android:id="@+id/descricao_viagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição"
            android:textAlignment="center"
            android:layout_marginBottom="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_room_black_18dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Origem : " />

            <TextView
                android:id="@+id/origem_viagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="São Paulo"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_near_me_black_18dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Destino : " />

            <TextView
                android:id="@+id/destino_viagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Santos"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_date_range_black_18dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Data : " />

            <TextView
                android:id="@+id/data_viagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07/12/1999"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_access_time_black_18dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Hora saída : " />

            <TextView
                android:id="@+id/hrSaida_viagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:00"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_access_time_black_18dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Hora chegada : " />

            <TextView
                android:id="@+id/hrChegada_viagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_monetization_on_black_18dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Preço : " />

            <TextView
                android:id="@+id/preco_viagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$55.00"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_paradas"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_location_black_18dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Paradas : " />

            <TextView
                android:id="@+id/paradas_viagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Praia Grande"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_poltrona"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_airline_seat_recline_extra_black_18dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Poltronas : " />

            <TextView
                android:id="@+id/poltrona_viagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"/>


        </LinearLayout>

        <Button
            android:id="@+id/btn_viagem"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_comprar"
            android:padding="10dp"
            android:text="Comprar"
            android:textStyle="bold"
            android:textColor="#fff"
            android:onClick="qrCode"/>

    </LinearLayout>

</ScrollView>